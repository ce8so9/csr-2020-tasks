<!doctype html>
<html>

<head>
  {% block head %}
  {% endblock %}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <style>
    body{
      background-color: darkslateblue;
      color: white;
    }
    #content {
      text-align: center;
      padding: 5px;
			margin: 0px auto;
			max-width: 80%;
      height: 100vh;
		}

    code {
      display: block;
      white-space: pre-wrap
    }

    .content {
      margin: 0px auto;
      max-width: 1300px;
    }

    .card-container {
      flex-direction: row;
      flex-wrap: wrap;
      display: flex;
      justify-content: center;
      margin: 5;
      color:black;
    }

    .btn {
      margin: 2px;
    }

    .card-clickable {
      min-width: 100px;
      max-width: 350px;
      margin: 5px;
    }

    .card-clickable:hover {
      transition: all 0.2s ease-out;
      box-shadow: 0px 4px 8px rgba(38, 38, 38, 0.2);
      top: -4px;
      border: 1px solid #cccccc;
      background-color: white;
    }

    .card-clickable:hover:before {
      transform: scale(2.15);
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Wheels 'n' Whales</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item {% if active == 'home' %} active {% endif %}">
          <a class="nav-link" href="/">Home</span></a>
        </li>
        <li class="nav-item {% if active == 'wheel' %} active {% endif %}">
          <a class="nav-link" href="/wheel">Wheel</a>
        </li>
        <li class="nav-item {% if active == 'whale' %} active {% endif %}">
          <a class="nav-link" href="/whale">Whale</a>
        </li>
      </ul>
    </div>
  </nav>
    {% block content %}
    {% endblock %}
</body>

</html>